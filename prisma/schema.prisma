generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Exercise{
  id String @id @default(auto()) @map("_id") @db.ObjectId()
  name String
  completed Boolean @default(false)
  sets Int
  reps Int
  weight Int
  userId String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("exercises")
}


